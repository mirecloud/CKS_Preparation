  "panels": [
    {
      "type": "stat",
      "title": "Virtual services",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "(sum(pilot_k8s_cfg_events{type=\"VirtualService\", event=\"add\"}) - sum(pilot_k8s_cfg_events{type=\"VirtualService\", event=\"delete\"})) or vector(0)"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } }
    },
    {
      "type": "stat",
      "title": "Gateways",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "(sum(pilot_k8s_cfg_events{type=\"Gateway\", event=\"add\"}) - sum(pilot_k8s_cfg_events{type=\"Gateway\", event=\"delete\"})) or vector(0)"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } }
    },
    {
      "type": "stat",
      "title": "Destination rules",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "(sum(pilot_k8s_cfg_events{type=\"DestinationRule\", event=\"add\"}) - sum(pilot_k8s_cfg_events{type=\"DestinationRule\", event=\"delete\"})) or vector(0)"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } }
    },
    {
      "type": "stat",
      "title": "Service entries",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "(sum(pilot_k8s_cfg_events{type=\"ServiceEntry\", event=\"add\"}) - sum(pilot_k8s_cfg_events{type=\"ServiceEntry\", event=\"delete\"})) or vector(0)"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } }
    },
    {
      "type": "stat",
      "title": "Workload entries",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "(sum(pilot_k8s_cfg_events{type=\"WorkloadEntry\", event=\"add\"}) - sum(pilot_k8s_cfg_events{type=\"WorkloadEntry\", event=\"delete\"})) or vector(0)"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } }
    },
    {
      "type": "stat",
      "title": "Proxies (connected)",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 4 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(istiod_proxy_pushes{type=\"cds\"}) or sum(istiod_process_cpu_seconds_total) * 0 or vector(0)"
        }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } },
      "description": "Heuristique simple: s'il n'y a pas de métrique dédiée, renvoie 0."
    },
    {
      "type": "timeseries",
      "title": "HTTP/GRPC requests (rps)",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 8 },
      "fieldConfig": { "defaults": { "unit": "req/s" }, "overrides": [] },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(istio_requests_total{reporter=\"source\"}[5m]))"
        }
      ],
      "options": { "legend": { "showLegend": false }, "tooltip": { "mode": "single" } }
    },
    {
      "type": "piechart",
      "title": "HTTP response overview",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (response_code) (rate(istio_requests_total{reporter=\"source\"}[5m]))"
        }
      ],
      "options": { "legend": { "displayMode": "table", "placement": "right" }, "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } }
    },
    {
      "type": "timeseries",
      "title": "vCPU usage (Istio components)",
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 17 },
      "fieldConfig": { "defaults": { "unit": "cores" }, "overrides": [] },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"$istio_ns\", container!=\"\", image!=\"\"}[5m]))"
        }
      ],
      "options": { "legend": { "showLegend": true }, "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "Virtual & resident memory (Istio components)",
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 17 },
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (pod) (container_memory_working_set_bytes{namespace=\"$istio_ns\", container!=\"\", image!=\"\"})"
        }
      ],
      "options": { "legend": { "showLegend": true }, "tooltip": { "mode": "multi" } }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["istio", "overview"],
